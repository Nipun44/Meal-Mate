<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9100"
    android:backgroundTint="@color/new_primary"
    tools:context=".Contact_us">

    <TextView
        android:id="@+id/contact_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#ffffff"
        android:text="@string/contact_us"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/topic"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="343dp"
        android:layout_height="60dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/roundedges"
        android:ems="10"
        android:hint="@string/contact_us_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_text" />

    <EditText
        android:id="@+id/contact_email"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/roundedges"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/contact_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/contact_name"
        app:layout_constraintTop_toBottomOf="@+id/contact_name" />

    <EditText
        android:id="@+id/contact_subject"
        android:layout_width="340sp"
        android:layout_height="60dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/roundedges"
        android:ems="10"
        android:hint="@string/contact_us_subject"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contact_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/contact_email"
        app:layout_constraintTop_toBottomOf="@+id/contact_email" />

    <EditText
        android:id="@+id/contact_discription"
        android:layout_width="339dp"
        android:layout_height="96dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/roundedges"
        android:ems="10"
        android:hint="@string/contact_us_discription"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/contact_subject"
        app:layout_constraintTop_toBottomOf="@+id/contact_subject" />

    <Button
        android:id="@+id/button3"
        android:layout_width="259dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/new_secondary"
        android:text="@string/contact_us_submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_discription" />

</androidx.constraintlayout.widget.ConstraintLayout>
