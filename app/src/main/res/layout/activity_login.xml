<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/username"
        android:layout_width="391dp"
        android:layout_height="74dp"
        android:layout_marginTop="4dp"
        android:autofillHints="Username"
        android:background="@color/login_input"
        android:backgroundTint="@color/border_color"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"

        android:hint="@string/username"
        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/not_have_account_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/password"
        android:layout_width="389dp"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        android:background="@color/border_color"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:hint="@string/password"
        android:autofillHints="password"
        android:inputType="textPassword"

        android:padding="28dp"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/login_screen_btn"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/button"
        android:text="@string/login_loginbutton"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"

        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/not_have_account_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/not_have_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:padding="10dp"
        android:text="@string/signup_dont_haveacc"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>